extends layout.pug

block content

  article.portfolio-intro

    h1 Welcome, this is Shotown!

    p Welcome to Shotown! Here is a vault of all my projects provided with screenshots and live link to try them out.


  article.portfolio-project-thumbs
    .projects-box.box.grid
      each project in projects
        .cell 
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`/static/${project.image_urls[0]}`, alt='')
            h5 #{project.project_name}


